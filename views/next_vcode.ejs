<!DOCTYPE html>
<html lang="en">
    <head>
        <% include partials/template_head.ejs %>
        <link rel='stylesheet' href='/css/view_style/custodian_cust_web_style.css' />
    </head>

    <body>
        <% include partials/template_body.ejs %>
        <% include partials/template_nav_header.ejs %>
    
        <% if(locals.show_popup){ %>
            <% var popup = locals.popup; %>
            <% include partials/template_popup.ejs %>
        <% } %>
		
        <div>
			<% if(type==="reset_url") { %>
		    	<form class="inline" autocomplete="off" action="/resetpassword/vcode_init" method="post" id="myForm">
			<% } else { %>
			    <form class="inline" autocomplete="off" action="/verify/vcode_init" method="post" id="myForm">
			<% } %>
                    <input type="text" class="form-control" id="UserEmail" name="UserEmail" value="<%- UserEmail %>" hidden>
                    <button type="submit" hidden> </button> 
			    </form>
		</div>
	<% include partials/template_footer.ejs %>
    </body>
</html>

<script nonce= "<%= locals.nonce%>" type="text/javascript">
	var t = 1;
	function showTime()
	{
			t -= 1;
			if(t==0)
			{
				document.getElementById("myForm").submit()
			}
			setTimeout("showTime()",1000);
	}
	window.history.forward(1);
	showTime();
</script>