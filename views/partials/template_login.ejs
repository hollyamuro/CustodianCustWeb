<link rel='stylesheet' href='/css/view_style/custodian_cust_web_style.css' />

<div class="container">
    <div class="row justify-content-center">
        <div class="card verify-card login-card">

            <div class="card-header verify-card-header align-center">
                <h5>
                    <b>Sign in</b>
                </h5>
                <hr class="verify-card-divider" />
            </div>

            <div class="card-body verify-card-body">
                <form autocomplete="off" action="/" method="post" id="login-form">

                    <div class="form-group">
                        <label for="type_radio">Please choose your identity:</label>
                        <div id="type_radio">
                            <input class="verify-radio" type="radio" id="user_type_1" name="user_type" value="<%= user_type.normal%>" checked>Customer</input >
                            <input class="verify-radio" type="radio" id="user_type_2" name="user_type" value="<%= user_type.bank%>">Staff</input >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="account">Account</label>
                        <input type="text" class="form-control" id="account" name="account" value="" placeholder="" required="required">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="" placeholder="" required="required">
                    </div>

                    <div class="form-group align-center">
                        <div class="g-recaptcha my-g-recaptcha" data-sitekey="6LcIUGEUAAAAACsDTmXocAiwzhSvf3QZD2tK9b2t"></div>
                    </div>

                    <div class="form-group align-center">
                        <button type="submit" class="btn verify-btn block-btn" data-hide="modal">Sign in</button>
                    </div>

                    <div class="form-group align-center">
                        <a href="/resetpassword/init">Forgot password?</a>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
<script nonce="<%= locals.nonce%>" src='https://www.google.com/recaptcha/api.js?hl=en'></script>