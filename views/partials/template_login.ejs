<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card login-frame">
            <script src='https://www.google.com/recaptcha/api.js'></script>
            <div class="card-header ">
                <h5 class="align-center"><%= title %> Sign in </h5>
            </div>
            
            <div class="card-body">
                <form autocomplete="off" action="/" method="post" id="login-form" onsubmit="return">

                    <div class="form-group">
                        <label for="myRadio">請選擇登入身分:</label>
                        <input type="radio" name="user_type" value="<%= user_type.bank%>">銀行登入
                        <input type="radio" name="user_type" value="<%= user_type.normal%>" checked>一般登入<br>
                        <label for="account">Account</label>
                        <input type="text" class="form-control" id="account" name="account" value="" placeholder="" required="required">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="" placeholder=""  required="required">
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="6LcIUGEUAAAAACsDTmXocAiwzhSvf3QZD2tK9b2t"></div>
                        <div class="align-center">
                            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <div class="align-center">
                            <a href = "/">Forgot password?</a>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>