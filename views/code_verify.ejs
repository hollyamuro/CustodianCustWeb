<!DOCTYPE html>
<html lang="en">
  <head>
		<% include partials/template_head.ejs %>
		<META HTTP-EQUIV="PRAGMA" CONTENT="NO-CACHE">
		<META HTTP-EQUIV="EXPIRES" CONTENT="Wed, 26 Feb 1997 08:21:57GMT">
		<META HTTP-EQUIV="Cache-Control" CONTENT="no-cache,must-revalidate">
		<link rel='stylesheet' href='/css/view_style/custodian_cust_web_style.css'/>
  </head>
  <body>
        <% include partials/template_body.ejs %>
        <% include partials/template_nav_header.ejs %>
    
        <% if(locals.show_popup){ %>
            <% var popup = locals.popup; %>
            <% include partials/template_popup.ejs %>
        <% } %>
		    <div class="container ">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card verify-card">

                                <div class="card-header verify-card-header">
                                    <p>Please enter your <b>verify code</b>.</p>
                                    <hr class="verify-card-divider"/>
                                </div>

                                <div class="card-body verify-card-body">
                                    <% if(type==="reset_url") { %>
                                        <form autocomplete="off" action="/resetpassword/verify" method="post" id="myForm">
                                    <% } else { %>
                                        <form autocomplete="off" action="/verify/verify" method="post" id="myForm">
                                    <% } %>		
                                    
                                            <div class="form-group">
                                                <label class="label" for="UserEmail">Your email is:</label>
                                                <input type="text" class="form-control verify-input " id="UserEmail" name="UserEmail" value="<%- UserEmail %>" readonly/>
                                            </div>

                                            <div class="form-group">
                                                <label class="label" for="VerifyCode">Verify code:</label>
                                                <input  type="text" 
                                                        class="form-control verify-input " 
                                                        id="VerifyCode" 
                                                        name="VerifyCode" 
                                                        required="required" 
                                                        placeholder="Verify Code"
                                                        required pattern="[A-Za-z0-9_]{1,30}" 
                                                        maxlength='30' 
                                                        title='Wrong Format'
                                                >
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn block-btn verify-btn">Verify</button>
                                            </div>

                                        </form>
                                </div>
                        </div>    
                    </div>
            </div>
        </div>
	    <% include partials/template_footer.ejs %>
    </body>  
</html>

<script nonce= "<%= locals.nonce%>" type="text/javascript">
	document.getElementById("myForm").reset();
	window.history.forward(1);
</script>